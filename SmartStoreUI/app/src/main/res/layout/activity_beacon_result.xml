<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".network.BeaconResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:text="이용 알림"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:lineSpacingExtra="15sp"
            android:text="매장 내 테이블 이용 시,\n자리에서 앱으로 주문하신 후,\n테이블의 태그를 찍으시면\n음료를 가져다 드립니다."
            android:textColor="@color/darkgray"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/color_white_round"
            android:fontFamily="@font/bmhanna_11yrs_ttf"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>

</LinearLayout>